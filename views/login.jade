html
	head
		title= title
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/estilo.css')
		script(src='/jquery/jquery-2.2.0.min.js')
		script(src='/bootstrap/js/bootstrap.min.js')
	body
		div.container.fundoLogin
			div.row
				div.col-md-4.col-md-offset-4.login.col-xs-10.col-xs-offset-1
					.text-center.login-title
						div.account-wall
							img(class='profile-img', src='/img/home/logo.png', style='padding: 15px')
							form(class='form-signin', action='/login', method='POST')
								input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
								input(type='password', name='password' class='form-control', placeholder='Senha', required)
								button(class='btn btn-lg btn-primary btn-block', type='submit' style='margin-top: 8px; margin-bottom: 8px;') Acessar
								span.clearfix
								a(data-toggle='modal', data-target='#esqueciSenha' style='font-size: 15px; cursor: pointer;') Esqueci senha
						#esqueciSenha.modal.fade(role='dialog')
							.modal-dialog
								// Modal content
								.modal-content
									.modal-header
										button.close(type='button', data-dismiss='modal') Ã—
										h4.modal-title Esqueci minha senha
									.modal-body
										form(action='/usuario/recuperaSenha' method='post')
											.form-group
												input#email.form-control(type='email', name='email', placeholder='Insira seu E-mail')
											.modal-footer
												button.btn.btn-default.botaoFechar.pull-left(type='button', data-dismiss='modal') Fechar
												button.btn.btn-success.botaoEnviar.pull-right Enviar
						#message
						if message
							h1.text-center.error-message #{message}